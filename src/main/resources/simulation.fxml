<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="550.0" minWidth="850.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.darwin.presenter.SimulationPresenter">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <top>
        <VBox alignment="CENTER" spacing="10">

        </VBox>
    </top>
    <left>
        <VBox fx:id="statsBox" alignment="CENTER" prefHeight="530.0" prefWidth="325.0" spacing="10">
            <LineChart fx:id="animalsChart" prefHeight="266.0" prefWidth="325.0" title="Animals, Plants and Free Fields Number">
                <xAxis>
                    <NumberAxis label="Days" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Number" />
                </yAxis>
            </LineChart>
            <LineChart fx:id="energyChart" prefHeight="266.0" prefWidth="325.0" title="Average energy, lifespan, children number">
                <xAxis>
                    <NumberAxis label="Days" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Number" />
                </yAxis>
            </LineChart>

        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" prefHeight="530.0" prefWidth="390.0" spacing="10">
            <HBox alignment="CENTER">
                <Button fx:id="ContinueButton" onAction="#onContinueClicked" text="▶ Play" />
                <Button fx:id="StopButton" onAction="#onSimulationStopClicked" text="⏸ Pause" />
            </HBox>

            <GridPane fx:id="mapGrid" alignment="CENTER" gridLinesVisible="true" prefHeight="10.0" prefWidth="2328.0" />
        </VBox>
    </center>
   <bottom>
      <HBox prefHeight="899.0" prefWidth="830.0" BorderPane.alignment="CENTER">
         <children>
               <Label fx:id="popularGenotypesLabel" text="Most Popular Genotypes" />
         </children>
      </HBox>
   </bottom>
    <bottom>
        <Label fx:id="descriptionLabel" text="Tutaj pojawi się opis ruchu" textAlignment="CENTER"/>
    </bottom>
</BorderPane>
